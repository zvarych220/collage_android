<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F0F0"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Panel"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="#2C3E50"
        android:fontFamily="sans-serif-medium"/>

    <Button
        android:id="@+id/btnManageUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Users"
        android:textSize="18sp"
        android:backgroundTint="#2980B9"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

    <Button
        android:id="@+id/btnManageProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Products"
        android:textSize="18sp"
        android:backgroundTint="#2980B9"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

    <Button
        android:id="@+id/btnSystemSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Settings"
        android:textSize="18sp"
        android:backgroundTint="#2980B9"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

    <Button
        android:id="@+id/btnManageOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Orders"
        android:textSize="18sp"
        android:backgroundTint="#2980B9"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

</LinearLayout>
